{
  "name": "nova-nix",
  "version": "0.5.0",
  "description": "Provides syntax highlighting and formatting for Nix.",
  "main": "src/index.ts",
  "author": "Hans Hoffman",
  "license": "MIT",
  "repository": "git@github.com:hansjhoffman/nova-nix.git",
  "bugs": {
    "url": "https://github.com/hansjhoffman/nova-nix/issues"
  },
  "homepage": "https://github.com/hansjhoffman/nova-nix#readme",
  "engines": {
    "node": ">=12.17.0"
  },
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "compile": "tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "prepare": "is-ci || husky install",
    "watch": "watch 'yarn run build' src"
  },
  "dependencies": {
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16",
    "monocle-ts": "^2.3.10",
    "ts-pattern": "^3.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.3",
    "@types/nova-editor-node": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "rollup": "^2.53.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5",
    "watch": "^1.0.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "resolutions": {
    "tslib": "^2.1.0"
  }
}
