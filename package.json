{
  "name": "nova-nix",
  "version": "0.8.0",
  "description": "Provides syntax highlighting and formatting for Nix.",
  "main": "src/index.ts",
  "author": "Hans Hoffman",
  "license": "MIT",
  "repository": "git@github.com:hansjhoffman/nova-nix.git",
  "bugs": {
    "url": "https://github.com/hansjhoffman/nova-nix/issues"
  },
  "homepage": "https://github.com/hansjhoffman/nova-nix#readme",
  "engines": {
    "node": ">=12.17.0"
  },
  "scripts": {
    "build": "make build",
    "compile": "make compile",
    "format": "make format",
    "format:ts": "make format-ts",
    "format:xml": "make format-xml",
    "lint": "make lint",
    "lint:fix": "make lint-fix",
    "prepare": "is-ci || husky install",
    "test": "make test"
  },
  "dependencies": {
    "fp-ts": "^2.11.4",
    "io-ts": "^2.2.16",
    "monocle-ts": "^2.3.11",
    "ts-pattern": "^3.3.3"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^1.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/nova-editor-node": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "esbuild": "^0.13.3",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "nix.novaextension/**/*.xml": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "tslib": "^2.1.0"
  }
}
