{
  "name": "nova-nix",
  "version": "0.7.0",
  "description": "Provides syntax highlighting and formatting for Nix.",
  "main": "src/index.ts",
  "author": "Hans Hoffman",
  "license": "MIT",
  "repository": "git@github.com:hansjhoffman/nova-nix.git",
  "bugs": {
    "url": "https://github.com/hansjhoffman/nova-nix/issues"
  },
  "homepage": "https://github.com/hansjhoffman/nova-nix#readme",
  "engines": {
    "node": ">=12.17.0"
  },
  "scripts": {
    "build": "make build",
    "compile": "make compile",
    "format": "make format",
    "format:ts": "make format-ts",
    "format:xml": "make format-xml",
    "lint": "make lint",
    "lint:fix": "make lint-fix",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "fp-ts": "^2.11.1",
    "io-ts": "^2.2.16",
    "monocle-ts": "^2.3.10",
    "ts-pattern": "^3.2.4"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^1.0.2",
    "@types/node": "^16.6.2",
    "@types/nova-editor-node": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "esbuild": "^0.12.21",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "nix.novaextension/**/*.xml": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "tslib": "^2.1.0"
  }
}
